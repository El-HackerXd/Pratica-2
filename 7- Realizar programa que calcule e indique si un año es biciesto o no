using System;

namespace TombolaLoteriaNacional
{
    class Program
    {
        static void Main(string[] args)
        {
            // Generamos una instancia de la clase Random
            Random random = new Random();

            // Generamos tres números aleatorios entre 0 y 99
            int numero1 = random.Next(100);
            int numero2 = random.Next(100);
            int numero3 = random.Next(100);

            // Mostramos los números generados en la consola
            Console.WriteLine("Los números de la tómbola de lotería nacional son:");
            Console.WriteLine(numero1);
            Console.WriteLine(numero2);
            Console.WriteLine(numero3);

            // Esperamos a que el usuario presione una tecla para salir
            Console.ReadKey();
        }
    }
}
